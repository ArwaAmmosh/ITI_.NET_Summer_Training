@model List<Office>

@{
    ViewData["Title"] = "Add Office";
    int i = 1;
}

<h1>Office</h1>


<table class="table table-info">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">NAME</th>
            <th scope="col">Location</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@(i++)</th>
                <td>@item.Id</td>
                <td>@item.name</td>
                <td>@item.Location</td>
                <td>

                    <a href="/Office/EditFormOffice/@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                    <td>
                    <a href="/Office/Delete/@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a href="../Office/AddFormOffice" class="btn btn-info">ADD</a>

