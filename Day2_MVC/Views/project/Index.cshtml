@model List<Project>
@{
    ViewData["Title"] = "Index";
}

<h1>Projects</h1>

@{    int i = 1;
}


<table class="table table-info">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">NAME</th>
            <th scope="col">Description</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@(i++)</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>

                    <a href="/project/Edit/@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td>
                    <a href="/project/Delete/@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a href="/project/Add" class="btn btn-info">ADD</a>

